@model Product[]

    <style>
    

  
 

  .event-card{
    width: 25rem;
    height: 40rem;
    backdrop-filter: blur( 4px );
   

}

.card-text-event{
    font-size: 1rem;
    margin: 0rem;
    padding: .75rem;
    font-weight: 300;
}


.card-footer-event {
    border: none;
    background: none;
}

.card-footer-event a{
    font-size:1rem;
    font-weight: 300;
    text-decoration: none;
    margin-left: .75rem;
}

.card-1{
    display: flex;
    justify-content: flex-start;
}

.card-2{
    display: flex;
    justify-content: center;   
}

.card-3{
    display: flex;
    justify-content: flex-end;   
}


        .cards-wrapper {
    display: flex;
  }

  .carousel-control-prev,
  .carousel-control-next {
    width: 3vh;
    height: 3vh;
    border-radius: 50%;
    position:relative;
    transform: translateY(-50%);
    color:black;
    border:1px solid black;
  }
    </style>

@if(Model==null)
{
    <h4>Login to view list of recommened products</h4>
}
else
{
    
     <div class="container-fluid sides">
      <div class="row d-flex justify-content-center mb-5">
        <div class="col-xxl-12 d-flex">
          <h1 class="titles mt-5 mb-2" id="titles3">Recommended for you</h1>
        </div>
        <div class="d-flex justify-content-end">
          <a class="carousel-control-prev mt-3" style="text-decoration: none;" role="button" data-slide="prev" onClick="$('#carouselExampleControlsNews').carousel('prev')">
            <i class="fa fa-arrow-left"></i>
            <span class="sr-only">Previous</span>
          </a>
          <p class="text-white px-2 py-1">Više</p>
          <a class="carousel-control-next mt-3" style="text-decoration: none;" role="button" data-slide="next" onClick="$('#carouselExampleControlsNews').carousel('next')">
            <i class="fa fa-arrow-right"></i>
            <span class="sr-only">Next</span>  
          </a>
        </div>
        
  <div id="carouselExampleControlsNews" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner justify-content-between">

        
      <div class="carousel-item active">
        <div class="row d-flex align-items-center justify-content-center">
 @for(int i=0; i<Model.Length-3;i++)
        {
       <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-8 col-sm-12 card-1" > 
          <div class="card event-card mx-auto my-2 text-white">
            @*<h5 class="card-header d-flex align-items-center text-center">
              NOVO
            </h5>*@
            <div class="card-body">
                <div class="img-container mx-auto">
                  <a>
                    <img class="card-img-top" src="@Model[i].ImageUrl" alt="stem" id="stem">
                  </a>
                </div>
                <div class=" justify-content-between align-items-center"> 
                    <h5 class="card-title-event text-center px-2">Some title</h5>
                    <p class="card-text-event">Some text
                    </p>
                </div>
            </div>
            <div class="card-footer card-footer-event d-flex align-items-center">
              <div class="green-line"></div>
              <a href="#" class="text-white btn">Details</a>
            </div>
          </div>
        </div>
        }
      </div>
    </div>
    
    <div class="carousel-item">
      <div class="row d-flex align-items-center justify-content-center">
          @for(int i=Model.Length-3; i<Model.Length; i++)
    {
      <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-8 col-sm-12 card-1">
        <div class="card event-card mx-auto my-2 text-white">
            
            <div class="card-body">
                <div class="img-container mx-auto">
                  <a>
                    <img class="card-img-top" src="@Model[i].ImageUrl" alt="stem" id="stem">
                  </a>
                </div>
                <div class=" justify-content-between align-items-center"> 
                    <h5 class="card-title-event text-center px-2">Some title</h5>
                    <p class="card-text-event">Some text
                    </p>
                  </div>
            </div>
            <div class="card-footer card-footer-event d-flex align-items-center">
              <div class="green-line"></div>
                <a href="#" class="text-white btn">Details</a>            
            </div>
        </div>
      </div>
      }
      
    </div>
    </div>
    
    </div>
  </div>
</div>
</div>
}
