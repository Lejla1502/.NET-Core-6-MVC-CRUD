@model Product[]

    <style>
 
  .event-card{
    width: 22rem;
    height: auto;
   
}

.card-text-event{
    font-size: 1rem;
    margin: 0rem;
    padding: .75rem;
    font-weight: 300;
}


.card-footer-event {
    border: none;
    background: none;
}

/*.card-footer-event a{
    font-size:1rem;
    font-weight: 300;
    text-decoration: none;
    margin-left: .75rem;
}*/

.card-footer-event a{
    width:100%;
   
}

.cards-wrapper {
    display: flex;
    justify-content: center;
  }

  .carousel-inner {
    padding: 1rem;
    
  }
  
  .carousel-control-prev,
  .carousel-control-next {
    position:absolute;
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    top:45%;
    color:black;
    border:1px solid black;
  }
  

  .carousel{
      position:relative;
  }

  .bi{
      color:black;
  }

    .img-container{
    object-fit:cover;
    width: 100%;
    height: 300px;
}

   .img-container img{
    width: 90%;
    height: 100%;
    margin-left:1rem;

}
    </style>

@if(Model!=null)
{
     <div class="container-fluid sides">
      <div class="row d-flex justify-content-center mb-5">
        <div class="col-xxl-12 d-flex">
          <h1 class="titles mt-5 mb-2" id="titles3">Recommended for you</h1>
        </div>

        
        <div id="carouselControlsRecommended" class="carousel slide" data-ride="carousel">
             <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-12 col-sm-12 sides mobile-arrows">
          <a class="mb-3 mx-1" role="button" data-slide="prev" onClick="$('#carouselControlsRecommended').carousel('prev')">
            <span class="carousel-control-prev" aria-hidden="true">
                <i class="bi bi-chevron-left"></i>
            </span>
@*            <span class="sr-only">Previous</span>
*@          </a>
          <a class="mb-3 mx-1" role="button" data-slide="next" onClick="$('#carouselControlsRecommended').carousel('next')">
            <span class="carousel-control-next" aria-hidden="true">
                 <i class="bi bi-chevron-right"></i>
            </span>
@*            <span class="sr-only">Next</span>
*@          </a>
      </div>
            <div class="carousel-inner justify-content-between">
              <div class="carousel-item active">
                <div class="row d-flex align-items-center justify-content-center">
                @for(int i=0; i<Model.Length-3;i++)
                {
                   <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-8 col-sm-12 card-1" > 
                      <div class="card event-card mx-auto">
                        <div class="card-body">
                            <div class="img-container mx-auto">
                              <a>
                                <img class="card-img-top" src="@Model[i].ImageUrl" alt="stem" id="stem">
                              </a>
                            </div>
                            <div class=" justify-content-between align-items-center"> 
                                <h5 class="card-title-event text-center px-2">@Model[i].Title</h5>
                                <div class="d-flex justify-content-between">
                                    <p class="card-text-event px-2">
                                        rating
                                    </p>
                                    <p class="card-text-event">
                                        @Model[i].Price
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer card-footer-event">
                          
                          <a href="#" class="text-white bg-black btn">Details</a>
                        </div>
                      </div>
                    </div>
                }
              </div>
            </div>
    
            <div class="carousel-item">
              <div class="row d-flex align-items-center justify-content-center">
              @for(int i=Model.Length-3; i<Model.Length; i++)
                {
                  <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-8 col-sm-12 card-1">
                    <div class="card event-card mx-auto">
            
                        <div class="card-body">
                            <div class="img-container mx-auto">
                              <a>
                                <img class="card-img-top" src="@Model[i].ImageUrl" alt="stem" id="stem">
                              </a>
                            </div>
                            <div class=" justify-content-between align-items-center"> 
                                <h5 class="card-title-event text-center px-2">@Model[i].Title</h5>
                                <div class="d-flex justify-content-between">
                                    <p class="card-text-event px-2">
                                        rating
                                    </p>
                                    <p class="card-text-event">
                                        @Model[i].Price
                                    </p>
                                </div>
                              </div>
                        </div>
                        <div class="card-footer card-footer-event">
                         
                            <a href="#" class="text-white bg-black btn">Details</a>            
                      </div>
                    </div>
                  </div>
                  }
      
            </div>
            </div>
    
    </div>
  </div>
</div>
</div>
}
