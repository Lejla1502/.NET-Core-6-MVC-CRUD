@model Product
@{
    ViewData["Title"] = "Edit";
}


<form method="post" asp-controller="Product" asp-action="SaveAfterEdit">
    
    <div class="mt-4">
        <div class="row pb-2">
            <h2 class="text-secondary">Edit Product</h2>
        </div>
    </div>
  <fieldset>
    @*<div asp-validation-summary="All"></div>*@
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
      <label asp-for="Title" class="form-label mt-4">Cover type name</label>
      <input asp-for="Title" type="text" class="form-control" placeholder="Enter product title">
      <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    
   <br />
    
    <button type="submit" class="btn btn-warning" style="width:150px">Update</button>
    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
  </fieldset>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
     }
}