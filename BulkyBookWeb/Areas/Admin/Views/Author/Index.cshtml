@model List<BulkyBook.Models.ViewModels.AuthorVM.AuthorInfo>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-secondary">Author List</h2>
        </div>
         <div class="col-6 text-end">
            <a asp-controller="Author" asp-action="Upsert" class="btn btn-primary">
              <i class="bi bi-plus-lg"></i> &nbsp; Create New Author
			</a>
		</div>
    </div>
    <br /><br />

  
    <table id="authorTable" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Num of books published</th>
                <th></th>
           </tr>
        </thead>
       
    </table>
</div>

@section Scripts{
    <script src="~/js/author.js"></script>
}
