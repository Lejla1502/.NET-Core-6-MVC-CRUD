@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-secondary">Cover Type List</h2>
        </div>
         <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
              <i class="bi bi-plus-lg"></i> &nbsp; Create New Cover Type
			</a>
		</div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Cover Type name</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%"> @obj.Name</td>
                    <td width="20%">
                        <div class=" btn-group" role="group">
                              <a class="btn btn-primary mx-2" asp-controler="CoverType" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                              <a class="btn btn-danger mx-2" asp-controler="CoverType" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
