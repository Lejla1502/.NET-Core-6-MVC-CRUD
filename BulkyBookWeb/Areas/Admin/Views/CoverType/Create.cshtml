@model CoverType
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <form method="post" asp-controller="CoverType" asp-action="Save">
        <div class="mt-4">
            <div class="row pb-2">
                <h2 class="text-secondary">Create cover type</h2>
            </div>
        </div>
  
      <fieldset>
        @*<div asp-validation-summary="All"></div>*@
        <div class="form-group">
          <label asp-for="Name" class="form-label mt-4">Cover type name</label>
          <input asp-for="Name" type="text" class="form-control" placeholder="Enter cover type name">
          <span asp-validation-for="Name" class="text-danger"></span>
        </div>
           <br />
        <button type="submit" class="btn btn-primary" style="width:150px">Submit</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
      </fieldset>
    </form>

</div>


@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"></partial>

     }
}